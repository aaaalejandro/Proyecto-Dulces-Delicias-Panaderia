@model List<PanesModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card bg-dark text-white">
    <div class="card-header">
        Listado de Panes
    </div>
    <div class="card-body bg-dark text-white">
        <a asp-action="Guardar" asp-controller="Panes" class="btn btn-success"><i class="bi bi-person-plus-fill"></i>Agregar Nuevo Pan</a>
        <hr />
        <table class="table table-dark table-hover table-bordered-white" style="border: 1px solid white;">
            <thead>
                <tr>
                    <th class="text-center" style="vertical-align: middle; border: 1px solid white;">Marca</th>
                    <th class="text-center" style="vertical-align: middle; border: 1px solid white;">Nombre</th>
                    <th class="text-center" style="vertical-align: middle; border: 1px solid white;">Descripción</th>
                    <th class="text-center" style="vertical-align: middle; border: 1px solid white;">Costo</th>
                    <th class="text-center" style="vertical-align: middle; border: 1px solid white;">Creación</th>
                    <th class="text-center" style="vertical-align: middle; border: 1px solid white;">Vencimiento</th>
                    <th class="text-center" style="vertical-align: middle; border: 1px solid white;">Stock</th>
                    <th class="text-center" style="vertical-align: middle; border: 1px solid white;">Imagen</th>
                    <th class="text-center" style="vertical-align: middle; border: 1px solid white;">Editar</th>
                    <th class="text-center" style="vertical-align: middle; border: 1px solid white;">Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="vertical-align: middle; border-right: 1px solid white;">@item.marcaP</td>
                        <td style="vertical-align: middle; border-right: 1px solid white;">@item.nombreP</td>
                        <td style="vertical-align: middle; border-right: 1px solid white;">@item.descripcionP</td>
                        <td class="text-center" style="vertical-align: middle; border-right: 1px solid white;">@item.costoP</td>
                        <td class="text-center" style="vertical-align: middle; border-right: 1px solid white;">@item.fechaCreacionP.ToString("yyyy-MM-dd")</td>
                        <td class="text-center" style="vertical-align: middle; border-right: 1px solid white;">@item.fechaVencimiP.ToString("yyyy-MM-dd")</td>
                        <td class="text-center" style="vertical-align: middle; border-right: 1px solid white;">@item.stockP</td>
                        <td class="text-center" style="vertical-align: middle; border-right: 1px solid white;"><img src="@item.imagenP" alt="Imagen de Pan" style="width: 50px; border: 2px solid black" /></td>
                        <td style="vertical-align: middle; border-right: 1px solid white;" class="text-center">
                            <a asp-action="Editar" asp-controller="Panes" class="btn btn-primary" asp-route-idPanes="@item.idPanes"><i class="bi bi-pencil-square"></i></a>
                        </td>
                        <td style="vertical-align: middle;" class="text-center">
                            <a asp-action="Eliminar" asp-controller="Panes" class="btn btn-danger" asp-route-idPanes="@item.idPanes"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


